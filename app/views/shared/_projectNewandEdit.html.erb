<div class="col-lg-6 mx-lg-auto">
  <div class="card shadow">
    <div class="card-header">
      <h2 class="card-title text-center">Create New Project</h2>
    </div>
    <div class="card-body">
    
      <%= form_for @project do |f| %>
        <% if @project.errors.any? %>
          <h2> Errors </h2>
          <ul>
          <% @project.errors.full_messages.each do |message| %>
            <li> <%= message %></li>
            <% end %>
          </ul>
          <% end %>
         <div class="form-group mb-2">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true , class: "form-control form-control-lg" %>
  </div>


         <div class="form-group mb-2">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control form-control-lg" %>
  </div>

   <div class="actions">
    <%= f.submit "Add Project" , class: "btn btn-lg btn-primary" %>
  </div>
    <% end %>

    </div>
     </div>
      </div>








